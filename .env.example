# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Retell AI
RETELL_API_KEY=your_retell_api_key
NEXT_PUBLIC_RETELL_AGENT_ID=your_default_retell_agent_id
# OPTIONAL: Only needed if you want to make programmatic outbound calls
# This is your Twilio or Telnyx phone number connected to Retell
# Find it in: Retell Dashboard > Phone Numbers
RETELL_PHONE_NUMBER=+1234567890

# Cal.com
CALCOM_API_KEY=your_calcom_api_key
NEXT_PUBLIC_CALCOM_EMBED_URL=https://cal.com/your-username

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================================
# Email Service (OPTIONAL - Choose ONE or skip entirely)
# ========================================
# Set EMAIL_PROVIDER to: 'sendgrid', 'resend', 'postmark', or 'none'
# If set to 'none' or left empty, emails will be logged but not sent (perfect for testing!)
EMAIL_PROVIDER=none

# Option 1: SendGrid
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com
# SENDGRID_FROM_NAME=CallVia

# Option 2: Resend (Recommended - easier setup, 3000 emails/month free)
# RESEND_API_KEY=re_your_resend_api_key
# RESEND_FROM_EMAIL=onboarding@resend.dev

# Option 3: Postmark
# POSTMARK_API_KEY=your_postmark_api_key
# POSTMARK_FROM_EMAIL=noreply@yourdomain.com

# SMS Provider (Optional - MessageBird or Telnyx)
SMS_PROVIDER=messagebird
MESSAGEBIRD_API_KEY=your_messagebird_key
# OR
# TELNYX_API_KEY=your_telnyx_key

# Google Sheets (Optional)
GOOGLE_SHEETS_CLIENT_EMAIL=your_service_account_email
GOOGLE_SHEETS_PRIVATE_KEY=your_service_account_private_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Webhook Secrets (generate your own random strings)
WEBHOOK_SECRET=your_internal_webhook_secret
